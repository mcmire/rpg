guard 'sass', :input => 'app/stylesheets', :output => 'public/stylesheets/app'
guard 'sass', :input => 'vendor/stylesheets', :output => 'public/stylesheets/vendor'

guard 'coffeescript', :input => 'app/javascripts', :output => 'public/javascripts/app'#, :bare => true
guard 'coffeescript', :input => 'vendor/javascripts', :output => 'public/javascripts/vendor'#, :bare => true
